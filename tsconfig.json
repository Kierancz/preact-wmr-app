{
	"compileOnSave": false,
	"compilerOptions": {
		"jsx": "preserve",
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment",
		"allowJs": true,
		"checkJs": true,
		// "strict": true,
		"noEmit": true,
		"moduleResolution": "node",
		"target": "esnext",
		"module": "esnext",
		"baseUrl": "./",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"esModuleInterop": true
	},
	"include": ["node_modules/wmr/types.d.ts", "**/*"],
	"exclude": ["**/*.test.js"],
	"typeAcquisition": {
		"enable": true
	}
}
